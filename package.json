{
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "benchmarks"
  ],
  "scripts": {
    "build": "lerna run build --ignore @xstyled/website --ignore @xstyled/benchmarks",
    "reset": "lerna run reset --ignore @xstyled/website --ignore @xstyled/benchmarks",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,mdx}\"",
    "lint": "eslint .",
    "release": "lerna publish --conventional-commits && conventional-github-releaser --preset angular",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@emotion/jest": "^11.3.0",
    "@emotion/react": "^11.4.0",
    "@emotion/serialize": "^1.0.2",
    "@emotion/styled": "^11.3.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/react": "^17.0.5",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.6.3",
    "browser-resolve": "^2.0.0",
    "bundlewatch": "^0.3.2",
    "codecov": "^3.8.2",
    "conventional-github-releaser": "^3.1.5",
    "esbuild": "^0.11.20",
    "eslint": "^7.26.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-esbuild": "^3.0.4",
    "styled-components": "^5.3.0",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "smooth-doc/styled-components": "^5.2.3"
  },
  "bundlewatch" : {
    "files": [
      {
        "path": "packages/core/dist/index.mjs",
        "maxSize": "10kB"
      },
      {
        "path": "packages/emotion/dist/index.mjs",
        "maxSize": "10kB"
      },
      {
        "path": "packages/styled-components/dist/index.mjs",
        "maxSize": "10kB"
      },
      {
        "path": "packages/system/dist/index.mjs",
        "maxSize": "10kB"
      },
      {
        "path": "packages/util/dist/index.mjs",
        "maxSize": "10kB"
      }
    ]
  }
}
